{
  "name": "shira-ai-convo-build",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "type": "module",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo build",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "quality-check": "npm run type-check && npm run lint && npm run format:check",
    "precommit": "npm run quality-check",
    "task-master": "task-master",
    "tasks:init": "task-master init",
    "tasks:parse": "task-master parse-prd",
    "tasks:list": "task-master list",
    "tasks:next": "task-master next",
    "tasks:generate": "task-master generate"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.4",
    "@react-navigation/native": "^7.1.14",
    "@tanstack/react-query": "^5.81.5",
    "expo": "53.0.13",
    "expo-av": "^15.1.7",
    "expo-constants": "~17.1.6",
    "expo-font": "~13.3.1",
    "expo-linear-gradient": "~14.1.5",
    "expo-linking": "~7.1.5",
    "expo-router": "~5.1.0",
    "expo-status-bar": "~2.2.3",
